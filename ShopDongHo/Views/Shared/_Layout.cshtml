<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shop Đồng Hồ</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Shop Đồng Hồ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Sản phẩm", "Index", "Product", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Giới thiệu", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Liên hệ", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Cart")" class="nav-link">
                            <i class="bi bi-cart"></i> Giỏ hàng
                            @{
                                var cart = Session["Cart"] as List<ShopDongHo.Models.ViewModels.CartItemViewModel> ?? new List<ShopDongHo.Models.ViewModels.CartItemViewModel>();
                                var cartItemCount = cart.Sum(c => c.Quantity);
                            }
                            <span class="badge bg-danger">@cartItemCount</span>
                        </a>
                    </li>
                    @if (Session["UserId"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                @Session["Username"]
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>@Html.ActionLink("Thông tin cá nhân", "Profile", "Account", null, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Đơn hàng của tôi", "History", "Order", null, new { @class = "dropdown-item" })</li>
                                @if (Session["Role"]?.ToString() == "Admin")
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li>@Html.ActionLink("Quản trị", "Dashboard", "Admin", null, new { @class = "dropdown-item" })</li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>@Html.ActionLink("Đăng xuất", "Logout", "Account", null, new { @class = "dropdown-item" })</li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Đăng nhập", "Login", "Account", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Đăng ký", "Register", "Account", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <div class="container mt-4 mb-5">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>Shop Đồng Hồ</h5>
                    <p>Chuyên cung cấp đồng hồ chính hãng, uy tín, chất lượng.</p>
                </div>
                <div class="col-md-4">
                    <h5>Liên kết</h5>
                    <ul class="list-unstyled">
                        <li>@Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "text-white" })</li>
                        <li>@Html.ActionLink("Sản phẩm", "Index", "Product", null, new { @class = "text-white" })</li>
                        <li>@Html.ActionLink("Giới thiệu", "About", "Home", null, new { @class = "text-white" })</li>
                        <li>@Html.ActionLink("Liên hệ", "Contact", "Home", null, new { @class = "text-white" })</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Thông tin liên hệ</h5>
                    <p>Email: contact@shopdongho.com<br>
                       Phone: 0123 456 789<br>
                       Địa chỉ: 123 Đường ABC, TP.HCM</p>
                </div>
            </div>
            <hr class="bg-white">
            <div class="text-center">
                <p>&copy; @DateTime.Now.Year - Shop Đồng Hồ. All rights reserved.</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
