@model ShopDongHo.Models.Entities.Order
@{
    ViewBag.Title = "Đặt hàng thành công";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="alert alert-success text-center py-4">
            <i class="bi bi-check-circle-fill" style="font-size: 3rem;"></i>
            <h2 class="mt-3">Đặt hàng thành công!</h2>
            <p class="lead mb-0">Mã đơn hàng: <strong>#@Model.Id</strong></p>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Thông tin đơn hàng</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Người nhận:</strong> @Model.CustomerName</p>
                        <p><strong>Số điện thoại:</strong> @Model.CustomerPhone</p>
                        <p><strong>Email:</strong> @Model.CustomerEmail</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Địa chỉ:</strong> @Model.CustomerAddress</p>
                        <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                        <p><strong>Trạng thái:</strong> <span class="badge bg-warning">Chờ xác nhận</span></p>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Note))
                {
                    <p><strong>Ghi chú:</strong> @Model.Note</p>
                }
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Chi tiết sản phẩm</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.OrderDetails)
                        {
                            <tr>
                                <td>@detail.ProductName</td>
                                <td>@detail.Quantity</td>
                                <td>@detail.Price.ToString("N0") đ</td>
                                <td>@((detail.Price * detail.Quantity).ToString("N0")) đ</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Tổng cộng:</th>
                            <th class="text-danger">@Model.TotalAmount.ToString("N0") đ</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="text-center">
            <p class="text-muted mb-3">Chúng tôi sẽ liên hệ với bạn sớm nhất để xác nhận đơn hàng.</p>
            @Html.ActionLink("Tiếp tục mua hàng", "Index", "Product", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Xem đơn hàng", "Detail", "Order", new { id = Model.Id }, new { @class = "btn btn-outline-secondary" })
        </div>
    </div>
</div>
