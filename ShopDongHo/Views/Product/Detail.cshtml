@model ShopDongHo.Models.Entities.Product
@using ShopDongHo.Helpers
@{
    ViewBag.Title = Model.Name;
    var relatedProducts = ViewBag.RelatedProducts as List<ShopDongHo.Models.Entities.Product>;
}

<div class="row">
    <div class="col-md-6 mb-4">
        <img src="@ImageHelper.GetProductImageUrl(Model.Image)" alt="@Model.Name" class="product-detail-image border rounded">
    </div>

    <div class="col-md-6">
        <h1 class="mb-3">@Model.Name</h1>

        <div class="mb-3">
            <span class="badge bg-secondary">@Model.Brand</span>
            <span class="badge bg-info">@Model.Category.Name</span>
        </div>

        @if (Model.OriginalPrice.HasValue && Model.OriginalPrice > Model.Price)
        {
            <p class="original-price mb-1">@Model.OriginalPrice.Value.ToString("N0") đ</p>
            var discount = (int)(((Model.OriginalPrice.Value - Model.Price) / Model.OriginalPrice.Value) * 100);
            <div class="mb-2">
                <span class="badge bg-success">Giảm @discount%</span>
            </div>
        }

        <h2 class="price-display mb-4">@Model.Price.ToString("N0") đ</h2>

        <div class="mb-4">
            <p><strong>Tình trạng:</strong>
                @if (Model.Stock > 0)
                {
                    <span class="text-success">Còn hàng (@Model.Stock sản phẩm)</span>
                }
                else
                {
                    <span class="text-danger">Hết hàng</span>
                }
            </p>
        </div>

        @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="mb-3">
                <label class="form-label">Số lượng:</label>
                <div class="input-group" style="max-width: 150px;">
                    <input type="number" name="quantity" class="form-control" value="1" min="1" max="@Model.Stock">
                </div>
            </div>

            @if (Model.Stock > 0)
            {
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                </button>
            }
            else
            {
                <button type="button" class="btn btn-secondary btn-lg" disabled>Hết hàng</button>
            }
        }

        <hr class="my-4">

        <h5>Mô tả sản phẩm</h5>
        <p>@Html.Raw(Model.Description ?? "Chưa có mô tả chi tiết.")</p>
    </div>
</div>

@if (relatedProducts != null && relatedProducts.Any())
{
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-4">Sản phẩm liên quan</h3>
        </div>

        @foreach (var product in relatedProducts)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                @Html.Partial("_ProductCard", product)
            </div>
        }
    </div>
}
